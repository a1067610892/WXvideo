.details {
  width: 750rpx;
  height: 400rpx;
  text-align: center;
  background: #eee;
  border-bottom: 1rpx solid #ccc;
}
.details-img {
  width: 320rpx;
  height: 360rpx;
  margin: 20rpx 0;
  border-radius: 15rpx;
}
.details-box {
  width: 710rpx;
  height: 300rpx;
  background: #eee;
  padding: 20rpx 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.details-box .details-left {
  width: 400rpx;
  height: 300rpx;
  float: left;
}
.details-box .details-left .details-title {
  font-size: 40rpx;
  font-weight: bold;
  margin: 25rpx 0;
  display: block;
}
.details-box .details-left .details-type {
  color: #999;
  font-size: 24rpx;
  margin: 10rpx 0;
}
.details-box .details-right {
  width: 310rpx;
  height: 300rpx;
  float: right;
}
.details-box .details-right .right-box {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid #ccc;
  background: #FFF;
  border-radius: 15rpx;
  margin: 20rpx auto;
  box-shadow: 5rpx 5rpx 5rpx 7rpx #ccc;
}
.details-box .details-right .right-box .right-title {
  font-size: 24rpx;
  color: #ccc;
  text-align: center;
  display: block;
  height: 50rpx;
  line-height: 50rpx;
}
.details-box .details-right .right-box .right-font {
  width: 100%;
  font-size: 32rpx;
  font-weight: blod;
  text-align: center;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
}
.details-box .details-right .right-box .right-num {
  font-size: 24rpx;
  color: #999;
  width: 100%;
  text-align: center;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
}
.introduce {
  width: 710rpx;
  background: #eee;
  padding: 20rpx 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.introduce .introduce-title {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  display: block;
  font-size: 24rpx;
  color: #999;
}
.introduce .paragraph {
  font-size: 28rpx;
}
.introduce .open {
  width: 100%;
  display: block;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #179717;
  text-align: right;
  margin-top: 15rpx;
}
.receive {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}